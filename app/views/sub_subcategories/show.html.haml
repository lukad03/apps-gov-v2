.usa-grid
  .breadcrumbs
    = link_to t("categories.show.products"), root_path
    %i.fa.fa-caret-right
    = @sub_subcategory.name

  %aside.categories
    = render "categories/sidebar",
      categories: @categories,
      current_category: @sub_subcategory.category,
      current_sub_subcategory: @sub_subcategory
  %section.products
    %header
      %h1
        = @sub_subcategory.name
    - if @sub_subcategory.products.any?
      %ul.results
        = render partial: "products/product",
          collection: @sub_subcategory.products,
          locals: { character_limit: 200 }
