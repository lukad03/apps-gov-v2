.modal.product-owner-modal#product-owner-signup-modal
  .slide-1-heading.heading
    %h1
      = t(".heading")
    %p
      = t(".subheading")
  - if defined? product_id
    = render "modules/product_owner_signup_form", product_id: product_id
  - else
    = render "modules/product_owner_signup_form"
  .close.modal-close
